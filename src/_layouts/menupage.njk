---
layout: site.njk
---
<main>
    <div class="container px-2">
        <div class="row gx-5">
            <div class="col-xl-3 col-lg-4 order-lg-2">
                <ul class="sticky-top sidebar-menu">
                {% for nav in subnavlist %}
                    <li class="{% if (pagetitle == nav.title) %}active{% endif %}">
                        <a href="/{{ nav.path }}" class="">
                            {{ nav.title }}
                        </a>
                        {% if nav.chapters %}
                            <ul class="d-none d-lg-block">
                            {% for chapter in nav.chapters %}
                                <li><a class="list-group-item" href="{% if (pagetitle != nav.title) %}/{{ nav.path }}{% endif %}#{{ chapter.tag }}">{{ chapter.title }}</a></li>
                            {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
                </ul>
            </div>
            <div class="col-xl-9 col-lg-8 order-lg-1">
                <h1>{{ pagetitle }}</h1>
                {{ content | safe }}
            </div>
        </div>
    </div>
</main>
